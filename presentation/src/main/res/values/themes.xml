<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Flights" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/color_status_bar</item>
    </style>

    <style name="Theme.Flights" parent="Base.Theme.Flights">
        <item name="colorPrimary">#FF000000</item>
        <item name="colorPrimaryDark">#FF000000</item>
        <item name="colorAccent">#00CEA9</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Flights.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flights.Launcher">
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <!--<item name="android:windowBackground">@drawable/launcher</item>-->
    </style>
</resources>